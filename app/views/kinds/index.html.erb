<div class="basic-grey">
  <script type="text/javascript">
    $.notify("<%= notice %>", "success");
  </script>

  <h1><%= "#{t("messages.listing")} #{@kinds.model.model_name.human(count: @kinds.count)}" %></h1>

  <table>
    <thead>
      <tr>
        <th><%= Contact.human_attribute_name("description") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @kinds.each do |kind| %>
        <tr style="background: <%= cycle("white", "#f0f0f5") %>">
          <td><%= kind.description %></td>
          <td><%= link_to t("buttons.edit"), edit_kind_path(kind) %></td>
          <td><%= link_to t("buttons.delete"), kind, method: :delete, data: { confirm: t("messages.confirm") } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= paginate @kinds %>

  <br>

  <%= link_to t("buttons.new"), new_kind_path, class: "btn btn-primary" %>
  <%= link_to t("buttons.home"), root_path, class: "btn btn-success" %>
</div>
